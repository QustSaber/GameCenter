<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_listview_item_rf"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/gameinfo_default" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtTitle_listview_item_rf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <RatingBar
                android:id="@+id/ratingBar_listview_item_rf"
                style="@style/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="1.0" />

            <TextView
                android:id="@+id/txtNum_listview_item_rf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="sum:998" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtDownload_listview_item_rf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_download_selector"
            android:gravity="center"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:text="@string/download" />

        <TextView
            android:id="@+id/txtSize_listview_item_rf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20.0M" />
    </LinearLayout>

</LinearLayout>